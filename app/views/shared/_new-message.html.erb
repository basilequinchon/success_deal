<div class="contact-container">
  <div class="container">
    <div class="message-card d-flex justify-content-between align-items-center py-5" id='contact'>
      <div class="new-message-form-container p-3">
        <div class="mb-2">
          <h1 class="new-message-form-container__title pb-3 pl-3">Contact</h1>
        </div>
        <%= simple_form_for @message, url: messages_path, id: 'myform' do |f| %>
          <div class="form-inputs">
            <div class="form-row">
              <div class="col-5">
                <%= f.input :name, placeholder: 'Nom...', label: false %>
              </div>
              <div class="col-7">
                <%= f.input :email, placeholder: 'Email...', label: false  %>
              </div>
            </div>
            <%= f.input :subject, placeholder: 'Sujet du message...', label: false  %>
            <%= f.input :content, placeholder: 'Votre message...', label: false, input_html: { rows: 4 } %>
          </div>
          <div class="text-right">
            <%= f.submit 'Envoyer le message', class: 'btn-success-deal-primary' %>
          </div>
        <% end %>
      </div>
      <div class='message-card__image pl-5' data-aos="fade-left" ><%= image_tag "hands.jpeg", alt: "chat" %></div>
    </div>
  </div>
</div>
